<center>

  <h2> GDD AI Ethics</h2>
  <div class="form-group">
  <%= form_with url: openai_path, method: :get do |form| %>

      Ask and you shall receive!
      <%= form.text_area :query, class: 'w-50 form-control', rows: 3 %>
      <br>
      Type: <%= form.select :type, [['Proposal','proposal'],['Policy','policy'],['Project','project']] %>
      <br>
      <br>
      <%= form.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
